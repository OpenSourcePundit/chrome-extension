{
  "manifest_version": 1,
  "name": "Website Highlight Saver",
  "version": "1.0.0",
  "description": "Highlight text on any page, save locally, manage  and summarize with AI.",
  "action": {
    "default_title": "Highlights",
    "default_popup": "src/popup/index.html"
  },
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "icons": {
    "16": "public/icon16.png",
    "48": "public/icon48.png",
    "128": "public/icon128.png"
  },
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["<all_urls>", "https://api.openai.com/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"],
      "css": ["src/content.css"]
    }
  ],
  "options_page": "src/options/index.html",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://api.openai.com"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "public/icon16.png",
        "public/icon48.png",
        "public/icon128.png"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
